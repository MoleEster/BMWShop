@model HomePageViewModel

    <head>
        <link rel="stylesheet" type="text/css" href="~/css/StyleVehicle.css" />
    </head>

<div class="vehicle-page">
    <div>
        <h2>@Model.vehicle.Name</h2>
        <p style="margin-top: 42rem;
                  margin-left: 4.5rem;">
            @Model.vehicle.Price.ToString("c")
        </p>
        <p style="margin-top: 43.5rem;
                  margin-left: 4.5rem;
                  font-size:1rem">Стоимость</p>
        <img src="@Model.vehicle.TopImg" style="width:100%;height:100%;" alt="@Model.vehicle.Name" />
        <p>Цена: @Model.vehicle.Specifications</p>
    </div>
</div>
