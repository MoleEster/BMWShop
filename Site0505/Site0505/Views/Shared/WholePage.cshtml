<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/css/StyleMain.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
</head>
<body>
    <header id="header">
        <div class="grey-border-header">
            <a href="#popup_1" class="header-item popup-link">Автомобили</a>
            <a class="header-item">Покупка</a>
            <a class="header-item">Владельцам</a>
            <a class="header-item">BMW с пробегом</a>
            <a class="header-item">BMW Россия</a>
            <a class="header-item">Владельцам</a>
            <div class="header-item">
                <img class="icon-search" src="~/img/search-solid.svg" />
            </div>
        </div>
    </header>
    <div class="main">

        @RenderBody()
    </div>
    <div id="popup_1" class="popup">
        <div class="popup-body">
            <div class="popup-content">
                <a href="#" class="popup-close close_popup">X</a>
                <div class="popup-title">
                    <div class="popup-title-layer">
                        <nav>
                            @{
                                Html.RenderPartial("CarCategories");

                            }
                        </nav>
                    </div>
                </div>
                <div class="popup-text">
                    @{
                        Html.RenderPartial("CarsAndCategories");
                    }
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $('.categoryButton').click(function (e) {
                    var message = $(this).parents('li').data("series");
                    $(".popup-text").load("/HomePage/CategoryContent", { category: message });
                })
            })
        </script>
        <script src="~/js/startPageScript.js"></script>
    </div>
</body>
</html>

