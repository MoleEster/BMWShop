@model Vehicle

<div class="vehicle-page">
    <div>
        <h2>@Model.Name</h2>
        <p style="margin-top: 42rem;
                  margin-left: 4.5rem;">
            @Model.Price.ToString("c")
        </p>
        <p style="margin-top: 43.5rem;
                  margin-left: 4.5rem;
                  font-size:1rem">Стоимость</p>
        <img src="@Model.TopImg" style="width:100%;height:100%;" alt="@Model.Name" />
        <p>Цена: @Model.Specifications</p>
    </div>
</div>
